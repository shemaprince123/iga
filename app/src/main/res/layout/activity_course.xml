<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:ignore="ExtraText">

------------------------------------------------------------------------------------
    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:src="@drawable/iga" />

        <!-- Vertical LinearLayout to stack TextView and Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- TextView for Welcome Back (if needed) -->
            <!-- <TextView
                android:id="@+id/user_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome back" /> -->

            <!-- Button (Logout) -->
            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout" />
        </LinearLayout>
    </LinearLayout>
    -------------------------------------------------------------------------------

    <!-- Course Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Learn C#"
            android:gravity="center"
            android:textSize="28sp"
            android:textStyle="bold" />



    </LinearLayout>
    -----------------------------------------------------------------------------------
<!--    image here for the course enrolled in -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="340dp"
        android:layout_gravity="end"
        android:contentDescription="Image Description"
        android:src="@drawable/learn"
        android:adjustViewBounds="true" />
    </LinearLayout>

    <!--    image here for the course enrolled in -->
    ------------------------------------------------------------------------------------
    <!-- Small Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"

        android:text="Learn Microsoftâ€™s popular C# programming language, used to make websites, mobile apps, video games, VR, and more."

        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Button on the Left -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enroll Now" />

        <!-- Spacing between buttons -->
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Button on the Right -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscribe" />
    </LinearLayout>


</LinearLayout>
