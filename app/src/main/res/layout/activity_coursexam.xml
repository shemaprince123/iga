<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:src="@drawable/iga" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Assessment"
        android:textSize="27sp"
        android:layout_gravity="center"
        android:textStyle="bold" />


    <!-- First Multiple Choice Question Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Question 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is the capital of France?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Options 1 -->
        <RadioButton
            android:id="@+id/optionARadioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. London" />

        <RadioButton
            android:id="@+id/optionBRadioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B. Paris" />

        <RadioButton
            android:id="@+id/optionCRadioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C. Berlin" />

        <RadioButton
            android:id="@+id/optionDRadioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D. Madrid" />
    </LinearLayout>

    <!-- Second Multiple Choice Question Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Question 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Which planet is known as the Red Planet?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Options 2 -->
        <RadioButton
            android:id="@+id/optionARadioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. Venus" />

        <RadioButton
            android:id="@+id/optionBRadioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B. Mars" />

        <RadioButton
            android:id="@+id/optionCRadioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C. Jupiter" />

        <RadioButton
            android:id="@+id/optionDRadioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D. Saturn" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Button on the Left -->
        <Button
            android:id="@+id/doneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done " />
    </LinearLayout>

</LinearLayout>
