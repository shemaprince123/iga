<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kinyac">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:src="@drawable/iga" />

        <!-- Vertical LinearLayout to stack TextView and Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Button (Logout) -->
            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                tools:ignore="VisualLintButtonSize" />
        </LinearLayout>
    </LinearLayout>

    <!-- Content Section -->
    <TextView
        android:id="@+id/kinyacontento"
        android:layout_width="403dp"
        android:layout_height="467dp"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:text="@string/kinyacontent"
        android:textSize="19.5sp"
        android:textStyle=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        tools:ignore="VisualLintLongText" />


    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Button on the Left -->

        <!-- Spacing between buttons -->
        <Button
            android:id="@+id/button_go_back_kinyac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:text="Go Back" />

<!--        <Space-->
<!--            android:layout_width="8dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1" />-->

        <!-- Button on the Right -->
        <Button
            android:id="@+id/button_done_kinyac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:text="Done" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
